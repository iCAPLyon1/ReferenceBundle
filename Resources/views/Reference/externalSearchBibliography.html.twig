{% extends "ICAPReferenceBundle:Reference:externalSearchDefault.html.twig" %}

{% block externalSearchHeader %}
    {% if item.ItemAttributes.Author is defined %}
        <p><strong>{% trans %}Author{% endtrans %}{% trans %}:{% endtrans %} </strong>{{ item.ItemAttributes.Author|raw|join(', ') }}</p>
        <input name="author" type="hidden" value="{{ item.ItemAttributes.Author|join(', ') }}"></input>
    {% endif %}
    {% if item.ItemAttributes.Publisher is defined %}
        <p><strong>{% trans %}Publisher{% endtrans %}{% trans %}:{% endtrans %} </strong>{{ item.ItemAttributes.Publisher|raw|join(', ') }}</p>
        <input name="editor" type="hidden" value="{{ item.ItemAttributes.Publisher|join(', ') }}"></input>
    {% endif %}
    {% if item.ItemAttributes.ISBN is defined %}
        <p><strong>{% trans %}Isbn{% endtrans %}{% trans %}:{% endtrans %} </strong>{{ item.ItemAttributes.ISBN }}</p>
        <input name="isbn" type="hidden" value="{{ item.ItemAttributes.ISBN }}"></input>
    {% endif %}
    {% if item.ItemAttributes.PublicationDate is defined %}
        <p><strong>{% trans %}Publicationdate{% endtrans %}{% trans %}:{% endtrans %} </strong>{{ item.ItemAttributes.PublicationDate|date("d F Y") }}</p>
        <input name="publicationDate" type="hidden" value="{{ item.ItemAttributes.PublicationDate|date("d F Y") }}"></input>
    {% endif %}
{% endblock %}

{% block externalSearchContent %}
    {{ parent() }}
    {#
    {{ item|json_encode() }}
    #}
{% endblock %}