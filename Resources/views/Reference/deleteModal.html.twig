<div id="deleteReferenceModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Are you sure to delete "{{ reference.title|capitalize }}"?</h3>
    </div>
    <div class="modal-body">
        {% include "ICAPReferenceBundle:Reference:deleteForm.html.twig" %}
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        <button id="deleteReferenceModal-submit" class="btn btn-danger"><i class="icon-remove-sign"></i> Confirm delete</button>
    </div>

    <script type="text/javascript">
        jQuery(document).ready(function () {
            jQuery('form[name="icap_reference_remove"] input[type="submit"]').hide();

            jQuery('#deleteReferenceModal-submit').on('click', function() {
                //I do the "click" on submit button for keep html5 warning
                jQuery('form[name="icap_reference_remove"] input[type="submit"]').trigger('click');
            });
        });
    </script>
</div>